@{
  Layout = "_Layout";
}

<h1>Add a new client to <em>@Model.Name</em>'s clients</h1>

<form action="/stylists/@Model.Id/clients" method="post">
  <input id="stylistId" name="stylistId" type="hidden" value="@Model.Id">
  <label for="clientTitle">Client Title</label>
  <input id="clientTitle" name="clientTitle" type="text"><br>
  <label for="clientDescription">Client Description</label>
  <input id="clientDescription" name="clientDescription" type="text"><br>
  <label for="clientPrice">Client Price</label>
  <input id="clientPrice" name="clientPrice" type="text"><br>
  <label for="clientDate">Client Date</label>
  <input id="clientDate" name="clientDate" type="text"><br>
  <button type='submit'>Add Client</button>
</form>