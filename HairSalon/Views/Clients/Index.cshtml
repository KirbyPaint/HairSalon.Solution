@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@* Cite your sources
https://stackoverflow.com/questions/23365909/asp-net-mvc-viewbag-list-of-anonymous-class-throws-error-on-count-method/23366040 *@
@if (((IEnumerable<dynamic>)ViewBag.Stylists).Count() == 0)
{
  <p>No clients or stylists found in database.</p>
  <p>You need to add a stylist before you can add clients to the database.</p>
}
else
{
  @if (@Model.Count == 0)
  {
    <p>No clients found in database.</p>
  }

  @foreach (Client client in Model)
  {
    <li>@Html.ActionLink($"{client.FirstName} {client.LastName}", "Details", new { id = client.ClientId }) | @client.Stylist.FirstName @client.Stylist.LastName</li>
  }
  <p>@Html.ActionLink("Add new client to database", "Create")</p>
}