@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>Add a new client</h1>

@using (Html.BeginForm())
{
  <p>Client's First Name:
  @Html.EditorFor(model => model.FirstName)</p>

  <p>Client's Last Name:
  @Html.EditorFor(model => model.LastName)</p>

  <p>Best Contact for Client:
  @Html.EditorFor(model => model.ContactInfo)</p>
  <p>(please enter either a phone number, email, or mailing address)</p>

  <p>Preferred Stylist:
  @* @Html.DropDownList("StylistId") *@</p>

  <input type="submit" value="Add new client" class="btn btn-success">
}
<hr>
<p>@Html.ActionLink("Show all clients", "Index")</p>