@using HairSalon.Models;

@{
  Layout = "_Layout";
}

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 

@foreach (Stylist stylist in Model)
{
  <h3><a href='/stylists/@stylist.Id'>@stylist.Name</a></h3>
  <p><em>@stylist.Description</em></p>
}

<h3><a href='/stylists/new'>Add a new stylist to sales database</a></h3>