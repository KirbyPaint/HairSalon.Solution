@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>All Stylists</h1>

@if (@Model.Count == 0)
{
  <p>No stylists have been added yet.</p>
} 

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.FirstName} {stylist.LastName}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new stylist", "Create")</p>